  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "clean": "rimraf coverage build",
    "test": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
