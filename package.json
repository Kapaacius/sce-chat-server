    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "convict": "^6.0.0",
    "lodash": "^4.17.15",
    "msgpack-lite": "^0.1.26",
    "tslib": "^2.0.0",
