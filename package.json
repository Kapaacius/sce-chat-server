  "devDependencies": {
    "@types/convict": "^5.2.1",
    "@types/jest": "^25.2.2",
    "@types/msgpack-lite": "^0.1.7",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.13.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.9",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.44.0",
    "ts-jest": "^26.0.0",
